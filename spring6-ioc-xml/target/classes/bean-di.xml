<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1 set 方法注入 -->
    <bean id="book" class="com.atguigu.spring6.iocxml.di.Book">
        <property name="bname" value="Go"></property>
        <property name="author" value="Hero"></property>
        <property name="others">
            <null/>
        </property>
    </bean>

    <!-- 2 构造器注入 -->
    <bean id="bookConstructor" class="com.atguigu.spring6.iocxml.di.Book">
        <constructor-arg name="bname" value="Python"></constructor-arg>
        <constructor-arg name="author" value="Hero"></constructor-arg>
    </bean>

    <!-- 第一种方式：引入外部 bean -->
    <bean id="department" class="com.atguigu.spring6.iocxml.di.Department">
        <property name="dName" value="部门"></property>
    </bean>

    <bean id="employee" class="com.atguigu.spring6.iocxml.di.Employee">
        <property name="eName" value="Hero"></property>
        <property name="age" value="50"></property>
        <property name="department" ref="department"></property>
    </bean>

    <!-- 第二种方式：引入内部 bean -->
    <bean id="employee2" class="com.atguigu.spring6.iocxml.di.Employee">
        <property name="eName" value="Hero2"></property>
        <property name="age" value="50"></property>
        <!-- 内部 bean -->
        <property name="department">
            <bean id="department2" class="com.atguigu.spring6.iocxml.di.Department">
                <property name="dName" value="部门2"></property>
            </bean>
        </property>
    </bean>

    <!-- 第三种方式：级联复制 -->
    <bean id="department3" class="com.atguigu.spring6.iocxml.di.Department">
        <property name="dName" value="部门2"></property>
    </bean>

    <bean id="employee3" class="com.atguigu.spring6.iocxml.di.Employee">
        <property name="eName" value="Hero3"></property>
        <property name="age" value="50"></property>
        <property name="department" ref="department3"></property>
        <property name="department.dName" value="级联"></property>
    </bean>

    <!-- 数组类型属性 -->
    <bean id="employee4" class="com.atguigu.spring6.iocxml.di.Employee">
        <property name="eName" value="Hero4"></property>
        <property name="age" value="50"></property>
        <property name="department" ref="department"></property>
        <property name="hobbies">
            <array>
                <value>抽烟</value>
                <value>喝酒</value>
                <value>烫头</value>
            </array>
        </property>
    </bean>

    <!-- List 类型注入 -->
    <bean id="department4" class="com.atguigu.spring6.iocxml.di.Department">
        <property name="dName" value="部门2"></property>
        <property name="empList">
            <list>
                <ref bean="employee"></ref>
                <ref bean="employee2"></ref>
            </list>
        </property>
    </bean>

    <!-- Map 类型注入 -->
    <bean id="teacher" class="com.atguigu.spring6.iocxml.di.Teacher">
        <property name="teacherId" value="teacher1"></property>
        <property name="teacherName" value="name1"></property>
    </bean>
    <bean id="teacher2" class="com.atguigu.spring6.iocxml.di.Teacher">
        <property name="teacherId" value="teacher2"></property>
        <property name="teacherName" value="name2"></property>
    </bean>

    <bean id="student" class="com.atguigu.spring6.iocxml.di.Student">
        <property name="sid" value="sid1"></property>
        <property name="sname" value="name1"></property>
        <property name="teacherMap">
            <map>
                <entry>
                    <key>
                        <value>10010</value>
                    </key>
                    <ref bean="teacher"></ref>
                </entry>
                <entry>
                    <key>
                        <value>10011</value>
                    </key>
                    <ref bean="teacher2"></ref>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="lesson" class="com.atguigu.spring6.iocxml.di.Lesson">
        <property name="lname" value="java"></property>
    </bean>
    <bean id="lesson2" class="com.atguigu.spring6.iocxml.di.Lesson">
        <property name="lname" value="Go"></property>
    </bean>

    <bean id="student2" class="com.atguigu.spring6.iocxml.di.Student">
        <property name="sid" value="10010"></property>
        <property name="sname" value="电信"></property>
        <!-- 注入 list、map 类型的属性 -->
        <property name="lessonList" ref="lessonList"></property>
        <property name="teacherMap" ref="teacherType"></property>
    </bean>
    <util:list id="lessonList">
        <ref bean="lesson"></ref>
        <ref bean="lesson2"></ref>
    </util:list>
    <util:map id="teacherType">
        <entry>
            <key>
                <value>10010</value>
            </key>
            <ref bean="teacher"></ref>
        </entry>
        <entry>
            <key>
                <value>10086</value>
            </key>
            <ref bean="teacher2"></ref>
        </entry>
    </util:map>
</beans>